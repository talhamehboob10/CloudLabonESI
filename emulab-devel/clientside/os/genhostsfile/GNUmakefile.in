SRCDIR		= @srcdir@
TESTBED_SRCDIR	= @top_srcdir@
OBJDIR		= @top_builddir@
SUBDIR		= $(subst $(TESTBED_SRCDIR)/,,$(SRCDIR))

include $(OBJDIR)/Makeconf

CFLAGS	= -Wall -O2 -g $(LDSTATIC) -I${OBJDIR} -I${TESTBED_LIBSRCDIR}/libtb
LIBS    = ${TESTBED_LIBOBJDIR}/libtb/libtb.a

all:	genhostsfile genfromdb genfromtopo

include $(TESTBED_SRCDIR)/GNUmakerules

genhostsfile-debug:	genhostsfile.o
	$(CC) $(CFLAGS) genhostsfile.o $(LIBS) -o $@

wgraph.o:	wgraph.cc wgraph.h

boss-install:	$(INSTALL_LIBEXECDIR)/genhostsfile
control:
control-install:
subboss: client
subboss-install: client-install
client: genhostsfile
client-install: client
	$(INSTALL_PROGRAM) genhostsfile$(EXE) $(DESTDIR)$(CLIENT_BINDIR)/genhostsfile$(EXE)

clean:
	rm -f *.o genhostsfile genfromtopo genfromdb
