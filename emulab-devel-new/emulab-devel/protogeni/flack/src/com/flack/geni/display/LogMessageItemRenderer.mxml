<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx"
				height="24"
				useHandCursor="true"
				buttonMode="true"
				dataChange="setLogMessage();"
				toolTip="{data.ShortMessage}">
	<s:layout>
		<s:HorizontalLayout useVirtualLayout="true" verticalAlign="middle" paddingRight="2" />
	</s:layout>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="hovered" />
		<s:State name="selected" />
	</s:states>
	
	<fx:Script>
		<![CDATA[
			import com.flack.shared.logging.LogMessage;
			
			[Bindable]
			private var msgTitle:String;
			
			[Bindable]
			private var msgColor:uint = 0x000000;
			
			private function setLogMessage():void
			{
				if (data == null)
					return;
				
				var msg:LogMessage = data as LogMessage;
				
				msgTitle = msg.Title;
				if(msg.level == LogMessage.LEVEL_FAIL)
					msgColor = 0xFF0000;
				else if(msg.level == LogMessage.LEVEL_WARNING)
					msgColor = 0xFFA500;
				else
					msgColor = 0x000000;
			}
		]]>
	</fx:Script>

	<s:Rect width="4" height="100%">
		<s:fill><s:SolidColor color="{msgColor}" /></s:fill>
	</s:Rect>
	<s:Label id="nodeLabel"
			 text="{msgTitle}"
			 color="{msgColor}"
			 maxDisplayedLines="1" />
	
</s:ItemRenderer>
