+		oep->ex_flag |= EX_MUSTRM;
+	for (nep = new; nep; nep = nep->ex_next)
+		nep->ex_flag |= EX_MUSTADD;
+	TS_GET(ce);
+	TS_DIFF(tscompare, ce, tscompare);
+	return -1;
