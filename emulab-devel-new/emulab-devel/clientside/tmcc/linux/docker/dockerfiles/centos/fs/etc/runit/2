#!/bin/sh

#
# Run our service dir.  We don't mess with runlevels; just run all the
# things.
#

PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

if [ -f /etc/envvars ]; then
    . /etc/envvars
fi

exec env - PATH=$PATH \
     runsvdir -P /etc/service 'log: ...........................................................................................................................................................................................................................................................................................................................................................................................................'
